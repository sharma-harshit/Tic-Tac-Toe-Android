<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board">

    <ImageView
        android:id="@+id/img11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clicked"
        android:layout_marginTop="7dp"
        android:layout_alignTop="@+id/img12"
        android:layout_alignLeft="@+id/img21"
        android:layout_alignStart="@+id/img21"
        android:tag="11"/>

    <ImageView
        android:id="@+id/img12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clicked"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/img22"
        android:layout_alignStart="@+id/img22"
        android:layout_marginTop="69dp"
        android:tag="12"/>

    <ImageView
        android:id="@+id/img13"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/img23"
        android:layout_alignStart="@+id/img23"
        android:layout_alignTop="@+id/img12"
        android:onClick="clicked"
        android:tag="13"/>

    <ImageView
        android:id="@+id/img21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clicked"
        android:layout_alignTop="@+id/img22"
        android:layout_alignLeft="@+id/img31"
        android:layout_alignStart="@+id/img31"
        android:tag="21"/>

    <ImageView
        android:id="@+id/img22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/img23"
        android:layout_centerHorizontal="true"
        android:onClick="clicked"
        android:tag="22"/>

    <ImageView
        android:id="@+id/img23"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clicked"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:tag="23"/>

    <ImageView
        android:id="@+id/img31"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clicked"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/img32"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tag="31"/>

    <ImageView
        android:id="@+id/img32"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clicked"
        android:layout_alignTop="@+id/img33"
        android:layout_alignLeft="@+id/img22"
        android:layout_alignStart="@+id/img22"
        android:tag="32"/>

    <ImageView
        android:id="@+id/img33"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="clicked"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/img23"
        android:layout_alignStart="@+id/img23"
        android:layout_marginBottom="57dp"
        android:tag="33"/>

    <LinearLayout
        android:id="@+id/dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textWon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player with 0 wins"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/buttonPlayAgain"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@android:color/background_light"
            android:onClick="playagain"
            android:text="Play Again "
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


</RelativeLayout>